#!/usr/bin/env ruby

require 'rubygems'
require 'roo'
require 'csv'

USAGE = <<~END.freeze
  Convert an excel file to csv via the roo library
  Example usage:
  # Print the csv to std out
    excel2csv file.xls
  # Write the csv to file
    excel2csv file.xls out.csv
END

def die_with_usage(msg = nil)
  puts USAGE
  puts msg if msg
  exit
end

filename = ARGV[0]

die_with_usage "You must pass a file." unless filename

excel = if filename.match?(/xlsx$/)
          Roo::Excelx.new(filename)
        else
          Roo::Excel.new(filename)
        end

output = if ARGV[1]
           File.open(ARGV[1], "w")
         else
           STDOUT
         end

1.upto(excel.last_row) do |line|
  output.write CSV.generate_line excel.row(line)
end
